
<div class="container">

    <div class="row">
        <%= link_to 'Add instructor', new_instructor_path %>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">

                <tr>
                    <th>Name</th>
                    <th>Info</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <% @instructors.each do |instructor| %>
                    <tr>
                        <td><%= instructor.first_name %><%= instructor.last_name %></td>
                        <td><%= link_to 'Info', instructor_path(instructor) %></td>
                        <td><%= link_to 'Remove', instructor_path(instructor), 'data-method': 'DELETE', 'data': { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>