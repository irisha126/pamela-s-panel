<h3>All students</h3>


<div class="container">

    <div class="row">
        <%= link_to 'Add student', new_student_path, class: 'btn btn-warning nav-btn mb-3' %>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">

                <tr>
                    <th>Name</th>
                    <th>Info</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <% @students.each do |student| %>
                    <tr>
                        <td><%= student.first_name %><%= student.last_name %></td>
                        <td><%= link_to 'Info', student_path(student), class: 'mr-3' %></td>
                        <td><%= link_to 'Remove', student_path(student), 'data-method': 'DELETE', 'data': { confirm: 'Are you sure?' }, class: 'mr-3' %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>






