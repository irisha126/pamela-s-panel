<!DOCTYPE html>
<html>
  <head>
    <title>RailsPamela</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
     
     <nav class="navbar navbar-light navbar-1 white">

    <!-- Navbar brand -->
    <% link_to 'Admins Panel', dashboard_path, class: 'navbar-brand' %>

    <!-- Collapse button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent15" aria-controls="navbarSupportedContent15"
        aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent15">

        <!-- Links -->
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <%= link_to 'Home', dashboard_path, class: 'nav-link' %> <span class="sr-only">(current)</span>
            </li>
            <li class="nav-item">
                <%= link_to 'Students', students_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
                <%= link_to 'Instructors', instructors_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
                <%= link_to 'Cohorts', cohorts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
                <%= link_to 'Courses', courses_path, class: 'nav-link' %>
            </li>
        </ul>
        <!-- Links -->

    </div>
    <!-- Collapsible content -->

      </nav>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
