<div class="container">
<div class="row">
<div class="col-2"></div>
<div class="col-8 login">
<div class="card">
 <h2 class ='centered'>Log in</h2>
  <%= image_tag image_path('login.png'), class: 'login-image' %>
  <div class="card-body">

       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'login-button' %>
      </div>
    <% end %>

      <%= render "admins/shared/links" %>

  </div>
  
   </div> 
   
   
  </div>
  <div class="col-2"></div>
</div>
</div>


