<h3>All courses</h3>

<%= link_to 'Add course', new_course_path %>



<% @courses.each do |course| %>
    <div class='to-remove'>
        <div >
            Name: <%= course.name %> 
        </div>

        <%= link_to 'Info', course_path(course) %>
        <%= link_to 'Remove', course_path(course), method: :delete, remote: true, class: 'delete-thing' %>
        <%= link_to 'Add Cohort', new_course_cohort_path(course) %>
    </div>
<% end %>