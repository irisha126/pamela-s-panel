<h3>All courses</h3>

<div class="container">

    <div class="row">
        <%= link_to 'Add course', new_course_path %>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Info</th>
                    <th>Remove</th>
                    <th>Add Cohort</th>
                </tr>
            </thead>
            <tbody>
                <% @courses.each do |course| %>
                    <tr>
                        <td><%= course.name %></td>
                        <td><%= link_to 'Info', course_path(course) %></td>
                        <td><%= link_to 'Remove', course_path(course), method: :delete, remote: true, class: 'delete-thing' %></td>
                        <td><%= link_to 'Add Cohort', new_course_cohort_path(course) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>



