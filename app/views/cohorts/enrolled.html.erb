<h3>Students Enrolled </h3>
   
   
   
<div class="container">

    <div class="row">
        <%= link_to 'Enroll Student', new_students_cohort_path %>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">

                <tr>
                    <th>Name</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                <% @cohort.students.each do |student| %>
                    <tr>
                        <td><%= student.first_name %> <%= student.last_name %></td>
                        <td><%= link_to 'Info', student_path(student) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
   
   
